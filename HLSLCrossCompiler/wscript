#! /usr/bin/env python
# encoding: utf-8

import sys

def options(opt):
    pass


def configure(conf):
    pass


def build(bld):
    
    b = bld( features           = 'c cstlib',
         source             = bld.path.ant_glob('src/**/*.c'),
         defines            = ['EXCLUDE_PSTDINT'],
         includes           = 'include src src/cbstring',
         export_includes    = 'include',
         target             = 'hlslcc')
    
    b = bld( features           = 'cxx cxxprogram',
         source             = bld.path.ant_glob('offline/*.cpp') + bld.path.ant_glob('offline/cjson/*.c'),
         includes           = 'include offline offline/cjson',
         defines            = ['EXCLUDE_PSTDINT'],
         use                = 'hlslcc',
         target             = 'HLSLcc')
